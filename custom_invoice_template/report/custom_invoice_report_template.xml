<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="custom_invoice_template">

<t t-call="web.basic_layout">
            <t t-call="web.html_container">

                <t t-set="o" t-value="docs"/>

                <div class="container">
                <div class="d-flex justify-content-end">
                    <img t-if="o.company_id.logo" class="o_company_logo_small" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="height: 50px;"/>
                </div>

                <div class="d-flex justify-content-end">
                    <h4>
                        <strong>Sales Tax - Invoice</strong>
                    </h4>
                </div>
                </div>

                <div class="container">
                    <div class="row d-flex">


                        <div class="col-5" style="font-size: 15px;">
                            <h6>
                                <strong>
                                    <t t-esc="o.partner_id.name"/>
                                </strong>
                            </h6>
                            <p t-esc="o.partner_id.contact_address_complete"/>

                            <div class="row" style="font-size: 14px;">
                                <div class="col-6">
                                    <span>Customer Phone No.</span>
                                </div>
                                <div class="col-6">
                                    <t t-esc="o.partner_id.phone"/>
                                </div>

                            </div>


                        </div>

                        <div class="col-2"/>

                        <div class="col-5 text-end" style="font-size: 15px;">
                            <h6>
                                <strong>
                                    <t t-esc="o.company_id.partner_id.name"/>
                                </strong>
                            </h6>
                            <p t-esc="o.company_id.partner_id.contact_address_complete"/>
                            
                            <div class="row" style="font-size: 14px;">
                                <div class="col-6">
                                    <span>Phone No.:</span>
                                </div>
                                <div class="col-6">
                                    <t t-esc="o.company_id.partner_id.phone"/>
                                </div>

                            </div>
                            <div class="row" style="font-size: 14px;">
                                <div class="col-6">
                                    <span>Fax No.:</span>
                                </div>
                                <div class="col-6">
                                    <t t-esc=""/> <!-- Fax number field -->
                                </div>

                            </div>
                            
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="row d-flex justify-content-between" style="font-size: 15px;">


                        <div class="col-5">
                            <br/>
                            <div class="row">
                                <div class="col-6">
                                    <span>Invoice No.</span>
                                </div>
                                <div class="col-6">
                                    <t t-esc="o.name"/>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <span>Posting Date</span>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <span>Cust. NTN No.</span>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>

                            </div>


                        </div>

                        <div class="col-2"/>

                        <div class="col-5 text-end">
                            <br/>
                            <div class="row">
                                <div class="col-6">
                                    <span>National Tax No.</span>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <span>GST Reg. No.</span>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <span>Ext. Document No.</span>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <span>Sales Person</span>
                                </div>
                                <div class="col-6">
                                    <t t-esc="o.invoice_user_id.name"/>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>



                <div class="page">
                    <table class="o_has_total_table table o_main_table table-borderless" name="line_itmes_table">
                        <thead style="border-bottom:1px solid black">
                            <tr>
                                <th>
                                    <dt>Part No.</dt>
                                </th>
                                <th>
                                    <dt>Description</dt>
                                </th>
                                <th>
                                    <dt>Quantity</dt>
                                </th>
                                <th>
                                    <dt>Unit Price</dt>
                                </th>
                                <th>
                                    <dt>GST %</dt>
                                </th>
                                <th>
                                    <dt>Amount</dt>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr t-foreach="o.invoice_line_ids" t-as="line_item">
                                <td>
                                    <span/>
                                </td>
                                <td>
                                    <span>
                                        <t t-esc="line_item.product_id.name"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <t t-esc="line_item.quantity"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <t t-esc="line_item.price_unit"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <t t-esc="line_item.tax_ids.name"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <t t-esc="line_item.price_subtotal"/>
                                    </span>
                                </td>

                            </tr>
                        </tbody>
                    </table>

                </div>

                <br/>

                <div class="container">
                    <div class="row d-flex justify-content-between">


                        <div class="col-6">

                            <div class="row">
                                <label>End User:</label>
                                <!--<t t-esc="o.amount_untaxed"/>-->
                            </div>
                            <br/>

                            <div class="row">
                                <strong>Total Amount in Words:</strong>
                                <span t-esc="o.currency_id.amount_to_text(o.amount_total)"/>
                            </div>

                        </div>

                        <div class="col-2"/>

                        <div class="col-4" style="font-size: 15px;">


                            <div class="row">
                                <div class="col-8">
                                    <strong>Untaxed Amount:</strong>
                                </div>
                                <div class="col-4">
                                    <t t-esc="o.amount_untaxed"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <strong>Sales Tax:</strong>
                                </div>
                                <div class="col-4">
                                    <t t-esc="o.amount_tax"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <strong>Inc. of ST</strong>
                                </div>
                                <div class="col-4">
                                    <!--<t t-esc="o.tax_totals"/>-->
                                </div>
                            </div>
                            <div class="row" style="border-bottom:1px solid black">
                                <div class="col-8">
                                    <strong>Advance Tax 0.5%</strong>
                                </div>
                                <div class="col-4">
                                    <!--<t t-esc="o.amount_total"/>-->
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <strong>Total Invoice Amount</strong>
                                </div>
                                <div class="col-4">
                                    <t t-esc="o.amount_total"/>
                                </div>
                            </div>



                        </div>
                    </div>

                </div>

                            <!--<div class="row">-->
                            <!--    <t t-foreach="o.tax_totals.items()" t-as="one">-->
                            <!--        <t t-esc="one[0]"/><br/>-->
                            <!--        <t t-esc="one[1]"/><br/>-->
                            <!--    </t>-->
                            <!--</div>-->
                <div class="container">
                    <br/>
                    <div class="row">

                        <div class="col-6">

                            <strong>Note:</strong>
                            <br/>
                            <p t-esc="o.narration"/>
                        </div>

                        <div class="col-6">

                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-6">
                            <p t-esc=""/>
                            <strong style="border-top:1px solid black; display: inline-block; padding-top: 5px;">Recipient Signature</strong>
                        </div>

                        <div class="col-6">
                            <p t-esc=""/>
                            <strong style="border-top:1px solid black; display: inline-block; padding-top: 5px;">Authorized Signatory</strong>
                        </div>
                    </div>


                </div>



                <div class="footer o_company_#{company.id}_layout {{report_type != 'pdf' and 'mt-auto'}}">
                    <div class="o_footer_content d-flex border-top pt-2">
                        <div class="text-end text-muted">
                            <div t-if="report_type == 'pdf' and display_name_in_footer" t-out="o.name">(document name)</div>
                            <div t-if="report_type == 'pdf'">Page <span class="page"/>
                            /<span class="topage"/>
                        </div>
                    </div>
                </div>
            </div>

        </t>
    </t>
</template>
</odoo>
