<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="custom_invoice_template">

        <t t-call="web.basic_layout">
            <t t-call="web.html_container">

                <t t-set="o" t-value="docs"/>

                <div class="d-flex justify-content-end mb-2">
                    <img t-if="o.company_id.logo" class="o_company_logo_small" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="height: 50px;"/>
                </div>

                <div class="d-flex justify-content-end mb-2">
                    <h3>
                        <dt>Sales Tax - Invoice</dt>
                    </h3>
                </div>

                <div class="container">
                    <div class="row d-flex justify-content-between">


                        <div class="col-5">
                            <h6>
                                <dt>
                                    <t t-esc="o.partner_id.name"/>
                                </dt>
                            </h6>
                            <t t-esc="o.partner_id.contact_address_complete"/>

                            <div class="row" style="font-size: 13px;">
                                <div class="col-6">
                                    <label>Customer Phone No.</label>
                                </div>
                                <div class="col-6">
                                    <t t-esc="o.partner_id.phone"/>
                                </div>

                            </div>


                        </div>

                        <div class="col-2"></div>

                        <div class="col-5 text-end">
                            <h6>
                                <dt>
                                    <t t-esc="o.company_id.partner_id.name"/>
                                </dt>
                            </h6>
                            <t t-esc="o.company_id.partner_id.contact_address_complete"/>
                            <div style="font-size: 13px;">
                                <label>Phone No.:</label>
                                <t t-esc="o.company_id.partner_id.phone"/>
                                <br/>
                                <label>Fax No.:</label>
                                <!--<t t-esc="o.company_id.partner_id.phone"/>-->
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="row d-flex justify-content-between">


                        <div class="col-5">
                            <br/>
                            <div class="row">
                                <div class="col-6">
                                    <label>Invoice No.</label>
                                </div>
                                <div class="col-6">
                                    <t t-esc="o.name"/>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label>Order No.</label>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label>Posting Date</label>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label>Cust. NTN No.</label>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>

                            </div>


                        </div>

                        <div class="col-2"></div>

                        <div class="col-5 text-end">
                            <br/>
                            <div class="row">
                                <div class="col-6">
                                    <label>National Tax No.</label>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label>GST Reg. No.</label>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label>Ext. Document No.</label>
                                </div>
                                <div class="col-6">
                                    <!--<t t-esc="o.name"/>-->
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label>Sales Person</label>
                                </div>
                                <div class="col-6">
                                    <t t-esc="o.invoice_user_id.name"/>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>



                <div class="page">
                    <table class="o_has_total_table table o_main_table table-borderless" name="ledger_table">
                        <thead style="border-bottom:1px solid black">
                            <tr>
                                <th>
                                    <dt>Part No.</dt>
                                </th>
                                <th>
                                    <dt>Description</dt>
                                </th>
                                <th>
                                    <dt>Quantity</dt>
                                </th>
                                <th>
                                    <dt>Unit Price</dt>
                                </th>
                                <th>
                                    <dt>GST %</dt>
                                </th>
                                <th>
                                    <dt>Amount</dt>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr t-foreach="o.invoice_line_ids" t-as="line_item">
                                <td>
                                    <span/>
                                </td>
                                <td>
                                    <span>
                                        <t t-esc="line_item.product_id.name"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <t t-esc="line_item.quantity"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <t t-esc="line_item.price_unit"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <t t-esc="line_item.tax_ids.name"/>
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        <t t-esc="line_item.price_subtotal"/>
                                    </span>
                                </td>

                            </tr>
                        </tbody>
                    </table>

                </div>





                <div class="footer o_company_#{company.id}_layout {{report_type != 'pdf' and 'mt-auto'}}">
                    <div class="o_footer_content d-flex border-top pt-2">
                        <div class="text-end text-muted">
                            <div t-if="report_type == 'pdf' and display_name_in_footer" t-out="o.name">(document name)</div>
                            <div t-if="report_type == 'pdf'">Page <span class="page"/>
 /                            <span class="topage"/>
                        </div>
                    </div>
                </div>
            </div>

        </t>
    </t>
</t>
</template>
</odoo>
