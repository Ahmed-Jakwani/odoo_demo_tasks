<?xml version="1.0"?>
<odoo>
	<record id="ol_helpdesk_ticket_form_inherit" model="ir.ui.view">
		<field name="name">ol.helpdesk.ticket.form.inherit</field>
        <field name="model">sh.helpdesk.ticket</field>
        <field name="inherit_id" ref="sh_all_in_one_helpdesk.sh_helpdesk_ticket_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='preview_ticket']" position="after">
                <button name="create_task" class="oe_highlight" type="object" string="Create Task"/>
            </xpath>

            <xpath expr="//field[@name='ticket_type']" position="after">
                <field name="project_id" string="Project" required="1"/>     
            </xpath>

            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="get_tasks"
                    icon="fa-exchange">
                    <field string="Tasks" name="tasks_count" widget="statinfo"/>
                </button>
            </div>

		</field>
	</record>
</odoo>