<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="invoice_report_inherit" inherit_id="account.report_invoice_document">
        
        <!-- Adding the headers of Delivered and Analytic in the template -->
        <xpath expr="//th[@name='th_quantity']" position="after">
            <th name="th_analyticdistribution" class="text-end">Analytic Distribution</th>
        </xpath>

        <!-- Adding the value of the two columns in the template -->
        <xpath expr="//td[@name='td_quantity']" position="after">
            <!-- Adding the analytic distribution account name which is computed in the sale_order.py-->
            <td name="td_analyticdistribution" class="text-end" >
                <span t-esc="line.analytic_account_name"/>
            </td>
        </xpath>

    </template>

</odoo>
